{
	"plugins": ["prettier"],

	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"airbnb",
		"prettier",
		"plugin:node/recommended"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},

	"rules": {
		"consistent-return": 1,
		"indent": [1, 4],
		"no-else-return": 1,
		"semi": [1, "always"],
		"space-unary-ops": 2,
		"comma-dangle": 1,
		"no-console": "warn",
		"Quotes": 2,
		"quotes": [2, 1],
		"newline-per-chained-call": 2,
		"array-bracket-newline": 2,
		"class-methods-use-this": 1,
		"func-call-spacing": "warn",

		"max-len": 0,
		"prettier/prettier": "error",
		"spaced-comment": "off",

		"func-names": "off",
		"object-shorthand": "off",
		"no-process-exit": "off",
		"no-param-reassign": "off",
		"no-return-await": "off",
		"no-underscore-dangle": "off",

		"prefer-destructuring": [
			"error",
			{ "object": true, "array": false }
		],
		"no-unused-vars": [
			"error",
			{ "argsIgnorePattern": "req|res|next|val" }
		]
	}
}
